# ============================================
# n8n Configuration
# ============================================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CAMBIAR_ESTE_PASSWORD_SEGURO

N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http

# Si usas dominio público, cambiar a tu URL
WEBHOOK_URL=http://localhost:5678/

# Timezone (importante para cron jobs)
GENERIC_TIMEZONE=America/Mexico_City

# Logging (debug, info, warn, error)
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# ============================================
# Supabase Database
# ============================================
# Host de Supabase (sin https://)
SUPABASE_DB_HOST=db.azjaehrdzdfgrumbqmuc.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=TU_PASSWORD_DE_SUPABASE_AQUI

# ============================================
# BIND ERP API
# ============================================
# URL base de la API (sin / al final)
BIND_API_URL=https://api.bind-erp.com

# Token de autenticación (Bearer token)
BIND_API_TOKEN=TU_TOKEN_DE_BIND_AQUI

