{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BIND Order Payload",
  "description": "Schema para crear órdenes en BIND ERP API",
  "type": "object",
  "required": [
    "AddressID",
    "ClientID",
    "CurrencyID",
    "LocationID",
    "OrderDate",
    "PriceListID",
    "WarehouseID",
    "Products"
  ],
  "properties": {
    "AddressID": {
      "type": "string",
      "format": "uuid",
      "description": "UUID de la dirección del cliente"
    },
    "ClientID": {
      "type": "string",
      "format": "uuid",
      "description": "UUID del cliente"
    },
    "CurrencyID": {
      "type": "string",
      "format": "uuid",
      "description": "UUID de la moneda (MXN)"
    },
    "LocationID": {
      "type": "string",
      "format": "uuid",
      "description": "UUID de la ubicación/sucursal"
    },
    "OrderDate": {
      "type": "string",
      "format": "date-time",
      "description": "Fecha de la orden en formato ISO 8601"
    },
    "PriceListID": {
      "type": "string",
      "format": "uuid",
      "description": "UUID de la lista de precios"
    },
    "WarehouseID": {
      "type": "string",
      "format": "uuid",
      "description": "UUID del almacén"
    },
    "Comments": {
      "type": "string",
      "description": "Comentarios adicionales de la orden"
    },
    "PurchaseOrder": {
      "type": ["string", "null"],
      "description": "Número de orden de compra (puede ser null)"
    },
    "Products": {
      "type": "array",
      "description": "Lista de productos en la orden",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["ID", "Price", "Qty", "VAT", "Unit"],
        "properties": {
          "ID": {
            "type": "string",
            "format": "uuid",
            "description": "UUID del producto"
          },
          "Price": {
            "type": "number",
            "minimum": 0,
            "description": "Precio unitario"
          },
          "Qty": {
            "type": "integer",
            "minimum": 1,
            "description": "Cantidad"
          },
          "VAT": {
            "type": "number",
            "minimum": 0,
            "description": "IVA (0 o porcentaje)"
          },
          "Comments": {
            "type": "string",
            "description": "Comentarios del producto"
          },
          "Unit": {
            "type": "string",
            "description": "Unidad de medida (ej: Litro, Pieza, Kg)"
          }
        }
      }
    },
    "Services": {
      "type": "array",
      "description": "Lista de servicios (generalmente vacío)",
      "items": {
        "type": "object"
      }
    }
  }
}
